<%- include('../partials/html-head.ejs') %> 

  <title>Mongoose Flights</title>
</head>
<body>
  <h1>Flights List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
      <% // Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs%></td>
          <td><a href="/flights/<%= flight._id %>" > Details </a></td>
        </tr>
      <% }) %>
      <% // Close the forEach using EJS here %>
    </tbody>
  </table>
</body>
</html>