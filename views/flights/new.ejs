<%- include('../partials/html-head.ejs') %> 
<%- include('../partials/nav.ejs') %> 
  <title>New Flight</title>
</head>
<body>
    <h1>Create a Flight</h1>
    <form action="/flights" method="POST">
      <div class="col-md-6">
        <label class="form-label">Airline:
          <select name="airline" id="" class="form-select">
              <option value="American">American</option>
              <option value="Southwest">Southwest</option>
              <option value="United">United</option>
          </select>
        </label><br>
      </div>
      <div class="col-md-6">
        <label class="form-label">Airport:
          <select name="airport" id="" class="form-select">
              <option value="AUS">AUS</option>
              <option value="DFW">DFW</option>
              <option value="DEN">DEN</option>
              <option value="LAX">LAX</option>
              <option value="SAN">SAN</option>
          </select>
        </label><br>
      </div>
      <div class="col-md-2">
        <label class="form-label">Flight Number:
          <input type="text" name="flightNo" class="form-control">
        </label><br>
      </div>
      <div>
        <label class="form-label">Departs:
          <input type="text" name="departs" class="form-control">
        </label><br>
      </div>
      <button type="submit" class="btn btn-primary">Create Flight</button>
    </form>
</body>
</html>